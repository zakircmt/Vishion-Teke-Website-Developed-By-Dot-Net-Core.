@model IEnumerable<VisionTake.Entities.TblVision>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- begin row -->
<div class="row">
    <div class="col-md-12 m-b-30">
        <!-- begin page title -->
        <div class="d-block d-sm-flex flex-nowrap align-items-center">
            <div class="page-title mb-2 mb-sm-0">
                <h1>Dashboard</h1>
            </div>
            <div class="ml-auto d-flex align-items-center">
                <nav>
                    <ol class="breadcrumb p-0 m-b-0">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action()"><i class="ti ti-home"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            Vision
                        </li>
                        <li class="breadcrumb-item active text-primary" aria-current="page">Vision</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- end page title -->
    </div>
</div>
<!-- end row -->
<div class="row">
    <div class="col-lg-12">
        <div class="card card-statistics">
            <div class="card-body">
                <div class="datatable-wrapper table-responsive">
                    <table id="datatable" class="display compact table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (item.Description != null)
                                        {
                                            @(item.Description.Length > 200 ? item.Description.Substring(0, 100) : item.Description)
                                        }
                                        else
                                        {
                                            @item.Description
                                        }
                                    </td>
                                    <td>
                                        <img src="@Url.Content("~/Images/" + item.ImageUrl)" style="height:100px;width:100px" />
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-info">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
