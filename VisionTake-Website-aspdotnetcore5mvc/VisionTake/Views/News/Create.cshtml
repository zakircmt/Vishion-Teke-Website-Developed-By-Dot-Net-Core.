@model VisionTake.Entities.TblNews

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- begin row -->
<div class="row">
    <div class="col-md-12 m-b-30">
        <!-- begin page title -->
        <div class="d-block d-sm-flex flex-nowrap align-items-center">
            <div class="page-title mb-2 mb-sm-0">
                <h1>News</h1>
            </div>
            <div class="ml-auto d-flex align-items-center">
                <nav>
                    <ol class="breadcrumb p-0 m-b-0">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action()"><i class="ti ti-home"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            Forms
                        </li>
                        <li class="breadcrumb-item active text-primary" aria-current="page">News</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- end page title -->
    </div>
</div>
<!-- end row -->
<!-- begin row -->
<div class="row">
    <div class="col-md-12">
        <div class="card card-statistics">
            <div class="card-header">
                <div class="card-heading">
                    <h4 class="card-title">Adding New Event</h4>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="color:black">News Title</label>
                        <div class="col-sm-10">
                            <input asp-for="NewsTitle" type="text" placeholder="" class="form-control autonumber">
                            <span class="font-14 text-muted" style="color:black">e.g. "Here Write Your News Title"</span>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text custom_file_label" id="inputGroupFileAddon01">Upload</span>
                        </div>
                        <div class="custom-file">
                            <label  style="color:black" for="FLFrontImage" typeof="">Select Image</label>
                            <input type="file" class="custom-file-input custom_input_file" name="MyProperty" id="FLFrontImage" @*id="inputGroupFile01"*@ aria-describedby="inputGroupFileAddon01" onchange="document.getElementById('FrontImagePrv').src = window.URL.createObjectURL(this.files[0])">
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <img id="FrontImagePrv" src="" width="150" height="150" style="border:1px; margin-top:20px; margin-left:190px" />
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="color:black">News Description</label>
                        <div class="col-sm-10">
                            <textarea asp-for="NewsDescription" type="text" placeholder="Write Description" class="form-control autonumber" style="border-color:black" tabindex="20"></textarea>
                            <span class="font-14 text-muted">e.g. "Here Write Your Slider Title"</span>
                        </div>
                    </div>
                    <button class="btn btn-square btn-success center" type="submit"> Save </button>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(".custom_input_file").("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom_file_label").addClass("selected").html(fileName);
    });
</script>

