@model  VisionTake.Entities.TblAbout
@{
    ViewData["Title"] = "AboutUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>About Us</h2>
            <ol>
                <li><a href="@Url.Action("Index","Home")">Home</a></li>
                <li>About</li>
            </ol>
        </div>

    </div>
</section><!-- End Breadcrumbs -->

<section id="about-us" class="about-us">
    <div class="container" data-aos="fade-up">
        <div class="row content">
            <div class="col-lg-6" data-aos="fade-right">

                <img class="col-lg-12 col-sm-12 col-md-12" src="@Url.Content("~/Images/" + Model.ImageUrl)" />
            </div>
            <div class="col-lg-6 pt-4 pt-lg-0" data-aos="fade-left">
                <h2 style="text-align:center">@Model.AboutTitle</h2>
                <p>
                    @*@Model.AboutDescription*@@Html.Raw(Model.AboutDescription)
                </p>
            </div>
        </div>

    </div>
</section>